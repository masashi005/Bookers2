
 <div class="container container-md-10 offset-md-3">

    <h2>Editing Book</h2>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

      <h2>Title</h2>
      <%= f.text_field :title %>

      <h2>Body</h2>
      <%= f.text_area :body %>

      <%= f.submit 'Update Book' %>
    <% end %>

    <table role="presentation" >
      <tr>
        <th><%= link_to "Show", book_path(@book.id) %></th>
        <th><p>|</p></th>
        <th><%= link_to "Back", books_path %></th>
      </tr>
    </table>
  </div>
