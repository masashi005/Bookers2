<!--book一覧-->

 <table class="table container-md-10 offset-md-1">
    <div class = "row">
      <div class = "col" ><h2>Books</h2></div>
    </div>
  <thead class="row border-top border-2">
    <th class="col mx-1"><p></p></th>
    <th class="col mx-1"><p>Title</p></th>
    <th class="col mx-1"><p>Opinion</p></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="row border-top border-3">
        <td class="col mx-1">
          <%= link_to user_path(book.user.id) do%>
          <%= image_tag book.user.get_profile_image(100,100)  %>
          <%end%>
        </td>
        <td class="col mx-1"><%= link_to book.title, book_path(book.id) %></td>
        <td class="col mx-1"><%= book.body %></td>
      </tr>
     <% end %>
  </tbody>
</table>
