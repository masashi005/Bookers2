<!--user一覧-->

<table class="table container offset-md-1">
  <div class = "row">
    <div class = "col-md-8" ><h2>Users</h2></div>
  </div>
  <thead>
    <tr class="row border-top border-3">
      <th class="col "><p>Image</p></th>
      <th class="col "><p>Name</p></th>
      <th class="col "><p></p></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="row no-gutters border-top border-3">
        <td class="col"><%= image_tag user.get_profile_image(100,100) %></td>
        <td class="col"><%= user.name %></td>
        <td class="col"><%= link_to "Show", user_path(user.id) %></td>
      </tr>
     <% end %>
  </tbody>
</table>