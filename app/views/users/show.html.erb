<!--ユーザー詳細ページ-->


  <table class="table container container-md-10 offset-md-1">
    <div class = "col" ><h2>Books</h2></div>
    <thead>
      <tr class="row no-gutters border-top border-3">
        <th class="col p-3"><p></p></th>
        <th class="col p-3"><p>Title</p></th>
        <th class="col p-3"><p>Opinion</p></th>
      </tr>
    </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr class="row no-gutters border-top border-3">
            <td class="col p-3">
              <%= link_to user_path(book.user.id) do%>
              <%= image_tag book.user.get_profile_image(100,100)  %>
              <%end%>
            </td>
            <td class="col p-3"><%= link_to book.title, book_path(book.id) %></td>
            <td class="col p-3"><%= book.body %></td>
          </tr>
         <% end %>
      </tbody>
  </table>
